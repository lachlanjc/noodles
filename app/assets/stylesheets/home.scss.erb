.feature-list {
  box-sizing: border-box;
  background-color: #fff;
  border-top: $border;
  padding-top: $space-2;
}

.feature-list__item {
  box-sizing: border-box;
  display: block;
  border-bottom: $border;
  padding-bottom: $space-2;
  padding-left: $space-2;
  padding-right: $space-2;
  transition: transform $transition;

  &:hover, &:focus {
    transform: scale(1.02);
  }
}

.form__submit {
  max-width: 75%;
  margin-left: auto;
  margin-right: auto;
}

.modal {
  width: 90%;
}

.section-header {
  position: relative;

  &__name {
    background-color: $grey-6;
    display: inline-block;
    padding: 0 $space-2;
    position: relative;
  }

  &:before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    border-bottom: $border;
    z-index: 0;
  }
}

@media screen and (min-width: 30em) {
  .hero {
    padding: 4rem 2rem;
  }

  .feature-list {
    background-color: transparent;
    border-top: 0;
    padding-top: 0;
  }

  .feature-list__item {
    background-color: #fff;
    border-radius: $border-radius-sm;
    box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.05);
    border-bottom: 0;
    padding: $space-2;

    &:hover,
    &:focus {
      box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
      transition: .4s cubic-bezier(.3,.6,1.2,1.4);
    }
  }

  .arrow {
    position: relative;
    margin-left: -24px;
    left: -1rem;
    margin-top: -1.5rem;
    transform: rotateZ(170deg);
  }

  .modal--signup {
    min-width: 24rem;
    max-width: 24rem;
  }
}

@media (min-width: 40em) {
  .banner {
    padding: 3rem 4rem;
    max-width: 64rem;
    width: auto;
    margin: auto;
  }
}

.shadow {
  box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.05);
}

.footer a {
  color: $blue;
}
