@import "variables";

@import "base/reset";
@import "base/type";

@import "modules/buttons";
@import "modules/forms";
@import "modules/layout";
@import "modules/modals";
@import "modules/nav";

@import "utilities/box-sizing";
@import "utilities/utilities";

body {
  background-color: $grey-6;
  -webkit-text-size-adjust: 100%;
}

header {
  box-shadow: inset 0 6vh 12vh 6vh rgba(0,0,0,.25);
  h1, h2 {
    text-shadow: 0 1px 4px rgba(0,0,0,0.75);
  }
  h2 {
    font-weight: 500;
  }
}

.banner {
  padding: $space-2;
  width: 100%;
}

mark {
  background: transparent url(<%= asset_path 'underline.svg' %>) bottom left no-repeat;
  background-size: 100% 0.75rem;
  padding-bottom: 2px;
  color: $white;
}

.lead {
  font-weight: 400;
  line-height: 1.5;
}

section {
  position: relative;
}

.smear {
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: inline-block;
  padding: ($space-1 / 2) $space-2;
  text-align: center;
  background-image: url(<%= asset_path 'smear-highlight.svg' %>);
  color: $white;
}
