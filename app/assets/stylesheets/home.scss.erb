$font-base:     Lato, "Helvetica Neue", Helvetica, sans-serif;
$brand-primary: #ff6d00;
$black:         #455a64;
$grey:          #757575;
$blue:          #00e5ff;
$green:         #c6ff00;

@mixin size($size) {
  width: $size;
  height: $size;
}

body {
  margin: 0;
  color: $black;
  line-height: 1.8;
}

* {
  font-family: $font-base;
  font-weight: 400;
}

hr {
  border: 0;
  border-bottom: 1px solid #e8e8e8;
  margin: 2em auto;
}

a {
  -webkit-tap-highlight-color: rgba(black, 0.12);
  color: #fff;
  text-decoration: none;

  &:hover,
  &:visited,
  &:visited:hover {
    color: #fff;
  }
}

nav {
  background: #fff;

  a {
    color: $brand-primary !important;
    display: inline-block;
    margin: 12px 16px;
    text-align: center;
  }

  .active {
    // padding-bottom: 2px;
    border-bottom: 2px solid $brand-primary;
  }
}

.hero {
  text-align: center;
  box-sizing: border-box;
  background-image: url(<%= asset_path 'home/background.jpg' %>);
  background-position: 45% 55%;
  background-repeat: no-repeat;
  background-size: auto;
  box-shadow: inset 0 -6em 6em rgba(0, 0, 0, 0.5);
  color: #fff;

  > a {
    position: absolute;
    top: 20px;
    right: 24px;
  }

  h1 {
    font-size: 50px;
    margin: 0.5em 0;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.4);
  }

  h3 {
    font-size: 28px;
    margin-bottom: 2em;
    text-shadow: 0 1px 6px rgba(0, 0, 0, 0.4);
  }

  section {
    padding: 10em 0;
  }
}

.btn {
  font: 21px $font-base;
  padding: 10px 20px;
  background: $brand-primary;
  border-radius: 6px;
  text-align: center;
  text-transform: uppercase;
  transition: all .28s cubic-bezier(.4,0,.2,1);
  box-shadow: 0 2px 6px 0 rgba(0,0,0,.16);

  &:hover {
    box-shadow: 0 3px 8px 0 rgba(0,0,0,.23);
  }

  &:active, &:focus {
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.23);
  }
}

.text-center {
  text-align: center;
}

.center {
  margin: 0 auto;
  display: block;
}

.paper-arrow {
  background-color: $green;
  position: relative;
  top: -25px;

  img {
    @include size(50px);
  }
}

.paper-btn {
  @extend .center;
  border-radius: 50%;
  box-shadow: 0 2px 10px 0 rgba(0,0,0,.16);
  transition: all .28s cubic-bezier(.4,0,.2,1);
  @include size(50px);

  img {
    opacity: 0.5;
  }
}

article {
  @extend .center;
  width: 75%;
}

section {
  @extend .center;
}

.grey, h2 {
  color: $grey;
}

.intro {
  font: 400 21px/1.8 $font-base;
  margin-top: 0;
}

.feature-icon {
  display: inline-block;
  background-color: $blue;

  img {
    opacity: .5;
    position: relative;
    top: 12px;
    left: 12px;
  }

  & ~ h2 {
    display: inline-block;
    margin-left: 12px;
    position: relative;
    top: 6px;
  }
}

footer {
  margin: 3em auto 2em auto;

  a, a:visited {
    color: $grey;
    margin: 0 8px;

    &:hover { color: $brand-primary; }
  }
}

@media (min-width: 1000px) {
  .hero {
    background-size: 100% auto;
  }
}

@media (max-width: 480px) {
  nav a {
    margin: 8px;
  }

  .hero {
    background-size: 200% 100%;

    h1 {
      font-size: 28px;
    }

    h3 {
      font-size: 21px;
    }

    section {
      padding: 5em 1em;
    }
  }

  .intro {
    font-size: 16px;
  }

  article section {
    width: 100%;
  }

  .feature-icon ~ h2 {
    top: 10px;
  }

  h2 {
    line-height: 1.4;
  }

  section blockquote {
    margin: 0;
  }
}
