.busy {
  background: url(<%= asset_path 'loading.svg' %>) no-repeat;
  background-size: 100%;
}
.busy-small {
  height: 32px;
  width: 32px;
}
.busy-large {
  width: 64px;
  height: 64px;
}
.busy.btn {
  box-shadow: none !important;
  width: 48px;
  height: 24px;
  margin: 0 auto;
  padding: 0;
  background-position-y: 50%;
}

.btn-paper {
  bottom: $space-2;
  line-height: .9; // fixes extra bottom "padding"
  right: $space-2;

  svg {
    width: 32px;
    height: 32px;
  }
}

.btn-paper-mini {
  bottom: 90px;
  line-height: .9;
  right: 27px;
}

