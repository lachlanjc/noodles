<ul class="list-reset">
<% @results.each do |result| %>
  <li class="bg-white rounded shadow mb2 p2 flex flex-center">
    <div class="flex-auto">
      <h3 class="m0"><%= result['title'] %></h3>
      <p class="m0 text"><%= result['description'] %></p>
    </div>
    <div class="flex-right flex flex-column center grey-2" style="max-width: 8rem;"
         data-behavior="explore_result_item"
         data-title="<%= result['title'] %>" data-url="<%= result['url'] %>">
      <a name="previewRecipe" href="#previewRecipe"
         class="btn bg-green mb1"
         data-behavior="explore_preview modal_trigger">
        Preview
      </a>
      <a class="btn bg-blue"
         data-behavior="explore_clip_from_list">
        Clip
      </a>
    </div>
  </li>
<% end %>
<% if @results.blank? %>
<li class="md-col-8 border bg-darken-1 rounded mt3 p3 center mx-auto">
  <h3 class="mt0">Sorry, we couldn't find anything. ðŸ˜°</h3>
  <p class="mb0">You could try again with a different search,</p>
  <p>or try with another source (click a different orange button above).</p>
</li>
<% end %>
</ul>
