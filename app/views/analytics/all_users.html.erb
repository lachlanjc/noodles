<% activate_nav!(:analytics_users) %>

<%= render 'shared/analytics_nav' %>

<article class="col-8">

  <h1>Users (<%= @users.count %>)</h1>

  <style> td { padding: 6px; } </style>

  <table class="table">
    <thead>
      <tr style="text-decoration: underline">
        <td>ID</td>
        <td>newsletter_sent</td>
        <td>First Name</td>
        <td>Email</td>
        <td>Recipe count</td>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.newsletter_sent %></td>
          <td><%= user.first_name %></td>
          <td><%= user.email %></td>
          <td><%= Recipe.where(:user_id => user.id).count %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
