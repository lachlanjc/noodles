<% activate_nav!(:analytics_dash) %>
<% title "Analytics Dashboard" %>
<%= render "shared/analytics_nav" %>

<article class="sm-col-11 md-col-6 mx-auto">

  <div class="bg-white rounded shadow pvs phm m2">
    <h1 class="m0 orange"><%= @users_count %></h1>
    <p class="lead">users</p>
  </div>

  <div class="bg-white rounded shadow pvs phm m2">
    <h1 class="m0 orange"><%= @recipes_count %></h1>
    <p class="lead">recipes</p>
  </div>

  <div class="bg-white rounded shadow pvs phm m2">
    <h1 class="m0 orange"><%= @recipes_shared_count %></h1>
    <p class="lead">shared recipes</p>
  </div>

  <div class="bg-white rounded shadow pvs phm m2">
    <h1 class="m0 orange"><%= @users_with_none.length %></h1>
    <p class="lead">users have no recipes</p>
  </div>

  <div class="bg-white rounded shadow pvs phm m2">
    <h1 class="m0 orange"><%= @users_with_one.length %></h1>
    <p class="lead">users have 1 recipe</p>
  </div>

  <div class="bg-white rounded shadow pvs phm m2">
    <h1 class="m0 orange"><%= @users_with_many.length %></h1>
    <p class="lead">users have several recipes</p>
  </div>

</div>
