<% activate_nav!(:analytics_dash) %>
<% title "Analytics Dashboard" %>
<%= render "shared/analytics_nav" %>

<main class="mx-auto flex fjc flex-rows mw7">
  <section class="mas bg-white shadow pam pal-ns rounded" style="width: 13rem;">
    <h1 class="m0 orange"><%= @users_count %></h1>
    <p class="grey-3 mb0">users</p>
  </section>

  <section class="mas bg-white shadow pam pal-ns rounded" style="width: 13rem;">
    <h1 class="m0 orange"><%= @recipes_count %></h1>
    <p class="grey-3 mb0">recipes</p>
  </section>

  <section class="mas bg-white shadow pam pal-ns rounded" style="width: 13rem;">
    <h1 class="m0 orange"><%= @recipes_shared_count %></h1>
    <p class="grey-3 mb0">shared recipes</p>
  </section>

  <section class="mas bg-white shadow pam pal-ns rounded" style="width: 13rem;">
    <h1 class="m0 orange"><%= @users_none.count %></h1>
    <p class="grey-3 mb0">users have no recipes</p>
  </section>

  <section class="mas bg-white shadow pam pal-ns rounded" style="width: 13rem;">
    <h1 class="m0 orange"><%= @users_one.count %></h1>
    <p class="grey-3 mb0">users have 1 recipes</p>
  </section>

  <section class="mas bg-white shadow pam pal-ns rounded" style="width: 13rem;">
    <h1 class="m0 orange"><%= @users_many.count %></h1>
    <p class="grey-3 mb0">users have several recipes</p>
  </section>
</main>
