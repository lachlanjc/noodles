<% activate_nav!(:analytics_collections) %>
<% title "Collections Analytics" %>
<%= render "shared/analytics_nav" %>

<main class="sm-col-11 md-col-6 mx-auto">

  <h1 class="orange">Collections (<%= @collections.count %>)</span></h1>

  <% @collections.each do |collection| %>
    <div class="bg-white rounded shadow pam mb2">
      <h2 class="mt0"><%= collection.name %><span class="grey-3 h3 ml1">#<%= collection.id %></span></h2>
      <% if User.exists?(collection.user) %>
      <p class="mb2">Published by <%= User.find(collection.user).first_name.to_s %></p>
      <% end %>
      <%= link_to "View", "/c/" + collection.hash_id.to_s, class: "btn bg-blue btn-sm mr2" %>
      <%= link_to "Delete", collection, method: :delete, data: { confirm: t("general.delete_forever") }, class: "btn bg-red btn-sm" %>
    </div>
  <% end %>

</main>
