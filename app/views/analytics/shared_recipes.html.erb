<% activate_nav!(:analytics_recipes) %>

<%= render "shared/analytics_nav" %>

<article class="sm-col-11 md-col-6 mx-auto">

  <h1>Shared Recipes <span class="badge"><%= @recipes.count %></span></h1>

  <% @recipes.each do |recipe| %>
    <div class="bg-white rounded shadow p2 mb2">
      <h2 class="mt0"><%= recipe.title %><span class="grey-3 h3 ml1">#<%= recipe.id %></span></h2>
      <% if User.exists?(recipe.user_id) %>
      <p class="mb2">Published by: <%= User.find(recipe.user_id).first_name.to_s %></p>
      <% end %>
      <%= link_to "View", "/s/" + recipe.shared_id.to_s, class: "btn-blue btn-sm mr2" %>
      <%= link_to "Delete", recipe, method: :delete, data: { confirm: t("general.delete_forever") }, class: "btn-red btn-sm" %>
    </div>
  <% end %>

</article>
