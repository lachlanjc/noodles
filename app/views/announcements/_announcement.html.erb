<%= link_to announcement, class: 'link-reset' do %>
  <h2 class="text-primary m0"><%= announcement.title %></h2>
  <p class="text-muted m0">
    <% if announcement.author_id == 1 %>
      Lachlan Campbell
    <% else %>
      Taran Samarth
    <% end %>
    on <%= announcement.created_at.strftime('%B %e, %Y') %>
  </p>

  <div class="text m1-top">
    <%= announcement.body_rendered.html_safe %>
  </div>
<% end %>
