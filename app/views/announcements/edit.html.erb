<%= stylesheet_link_tag "editor" %>

<article class="col-7">
<%= form_for(@announcement) do |f| %>

  <%= f.text_field :title, autofocus: true, required: true, class: "text-input invisble-input full-width header", placeholder: "Title the announcement", autocomplete: "off" %>

  <%= f.text_field :author_id, class: "text-input invisble-input", placeholder: "Author (1/2)" %>

  <%= f.text_area :body, class: "text-input invisble-input full-width", placeholder: "What do you have to say? (Markdown supported)", rows: "10", autocomplete: "off" %>

  <%= f.submit t("general.save"), class: "btn btn-save m1-btm" %>

<% end %>
</article>
