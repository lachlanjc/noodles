<%- title @announcement.title %>
<% activate_nav!(:announcements) %>

<%= render "shared/nav" %>

<%= javascript_include_tag "reactive" %>
<%= react_component("AnnouncementBody", announcement: @announcement.as_json) %>

<% if @admin == true %>
  <%= link_to "Delete", @announcement, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
