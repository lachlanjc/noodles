<% @title = @announcement.title.to_s.html_safe %>
<% title @title %>
<% activate_nav!(:announcements) %>

<% content_for :meta do -%>
  <meta name="twitter:card" content="summary">
  <meta property="og:site_name" content="Noodles" />
  <meta name="twitter:domain" content="getnoodl.es">
  <meta property="og:url" content="http://www.getnoodl.es/announcements/<%= @announcement.id.to_s %>">
  <meta property="og:title" content="<%= @title %>">
  <meta name="twitter:title" content="<%= @title %>">
  <meta property="og:image" content="<%= image_url('apple-touch-icon.png') %>"/>
  <meta name="twitter:image:src" content="<%= image_url('apple-touch-icon.png') %>">
  <meta property="og:description" content="Check out these updates to Noodles, a simple app to keep, cook, and share all your recipes.">
  <meta name="twitter:description" content="Check out these updates to Noodles, a simple app to keep, cook, and share all your recipes.">
<% end -%>

<%= render 'shared/nav' %>

<article class="document">
  <h1 class="man">
    <%= @announcement.title %>
  </h1>
  <p class="grey-3">
    <%= @announcement.created_at.strftime '%B %e, %Y' %>
    <%= link_to 'Delete', @announcement, method: :delete, data: { confirm: 'Are you sure?' }, class: 'red b' if @admin %>
  </p>
  <div class="text text-normalized">
    <%= @announcement.body_rendered.html_safe %>
  </div>
</article>
