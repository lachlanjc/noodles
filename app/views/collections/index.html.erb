<% activate_nav!(:collections) %>
<%- title "Collections" %>

<%= render "shared/nav" %>
<%= react_component("CollectionIndex", collections: @collections.as_json) %>

<div class="modal" id="newCollection">
  <a class="modal-close float-right" href="#">
    <%= inline_svg("close.svg") %>
  </a>
  <h2>Create a Collection</h2>
  <hr>
  <%= form_for(Collection.new) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "text-input", placeholder: "Spectacular Desserts" %>

    <%= f.label :description %>
    <%= f.text_area :description, class: "text-input", placeholder: "The best food to end your meal." %>

    <br>
    <%= f.label :photo, class: "ib" %><small class="ml1">(optional)</small>
    <%= f.file_field :photo, class: "line-height-reset" %>

    <%= f.submit "Create", class: "btn-blue float-right" %>

  <% end %>
</div>

<a href="#newCollection" class="btn-paper modalTrigger">
  <%= inline_svg("add.svg") %>
</a>
