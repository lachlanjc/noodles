<%- title 'Collections' %>
<% activate_nav!(:collections) %>

<%= render 'shared/nav' %>

<%= react_component 'CollectionIndex', collections: @collections.as_json %>

<div class="modal" id="newCollection">
  <%= modal_close %>
  <h2>Create a Collection</h2>
  <hr>
  <%= render 'form' %>
</div>

<a href="#newCollection" data-behavior="modal_trigger"
   class="btn-paper bg-orange fill-white circle fixed pam shadow tooltipped"
   aria-label="New Collection">
  <%= inline_svg 'add.svg' %>
</a>

<% if params[:new_collection] %>
  <!-- Stupid hack alert! -->
  <script>
  $(function() {
    $("a[href=#newCollection]").click();
  });
  </script>
<% end %>
