<%- title 'Collections' %>
<% activate_nav!(:collections) %>

<%= render 'shared/nav' %>

<%= react_component 'CollectionList', collections: @collections.as_json %>

<section class="modal" id="newCollection" role="dialog">
  <%= modal_header @collections.any? ? 'Make your next collection' : 'Make your first collection' %>
  <%= render 'form' %>
</section>

<a href="#newCollection" data-behavior="modal_trigger"
   class="btn-paper bg-orange fill-white circle fixed pam shadow-deep shadow-deep--effect tooltipped"
   aria-label="New Collection">
  <%= inline_svg 'add.svg' %>
</a>

<% if params[:new_collection] %>
  <script>
  // Ugly hack, butâ€¦
  $(function() {
    $('a[href="#newCollection"]').click()
  })
  </script>
<% end %>
