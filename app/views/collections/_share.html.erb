<section class="modal tc" role="dialog" id="shareCollection">
  <%= modal_header 'Share Collecction' %>

  <p class="mbs">Share this link:</p>
  <section class="f5 mx-auto">
    <input value="<%= @shared_url %>" class="text-input dib" readonly>
    <button type="button" class="btn bg-green btn-sm mls"
            data-clipboard-text="<%= @shared_url %>" data-behavior="copy">
      Copy
    </button>
  </section>

  <div class="mls social pvs">
    <a rel="nofollow" href="http://twitter.com/share?text=Check out <%= @collection.name %>, a collection on @noodlesapp:&url=<%= @shared_url %>" target="_blank">
      <%= twitter_icon %>
    </a>
    <a rel="nofollow" href="https://www.facebook.com/sharer/sharer.php?u=<%= @shared_url %>" class="mls" target="_blank">
      <%= facebook_icon %>
    </a>
    <a rel="nofollow" href="https://buffer.com/add?url=<%= @shared_url %>&text=Check out <%= @collection.name %>, a collection on @noodlesapp." class="mls" target="_blank">
      <%= buffer_icon %>
    </a>
    <a rel="nofollow" href="https://plus.google.com/share?url=<%= @shared_url %>" class="mls" target="_blank">
      <%= googleplus_icon %>
    </a>
    <a href="mailto:?subject=Check out <%= @collection.name %> on Noodles&body=You should check out <%= @collection.name %>, a new collection on Noodles (https://getnoodl.es). Here's the link: <%= @shared_url %>" class="mls">
      <%= email_icon %>
    </a>
  </div>
</section>
