<%= form_for(@collection) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "text-input", placeholder: "Snacks? Salads? Pasta? Cakes?" %>

  <%= f.label :description, class: "inline-block" %><small class="ml1">(optional)</small>
  <%= f.text_area :description, class: "text-input", placeholder: "Quickly describe your collection" %>

  <%= f.label :photo, class: "inline-block" %><small class="ml1">(optional)</small>
  <%= f.file_field :photo, class: "block" %>

  <%= link_to t("general.delete"), @collection, method: :delete, data: { confirm: t("general.delete_collection_forever") }, class: "btn bg-red btn-sm mt2" if nav_active?(:collection) %>

  <%= f.submit "Save", class: "btn bg-blue right" %>
<% end %>
