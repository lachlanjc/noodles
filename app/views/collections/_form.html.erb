<%= form_for(@collection) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "text-input", placeholder: "Spectacular Desserts" %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "text-input", placeholder: "The best food to end your meal." %>

  <%= f.label :photo, class: "inline-block" %><small class="ml1">(optional)</small>
  <%= f.file_field :photo, class: "block" %>

  <%= link_to t("general.delete"), @collection, method: :delete, data: { confirm: t("general.delete_collection_forever") }, class: "btn-red btn-sm mt2" if nav_active?(:collection) %>

  <%= f.submit "Save", class: "btn-blue right" %>
<% end %>
