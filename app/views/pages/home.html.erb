  <meta name="description" content="Noodles, a simple app for you to keep, cook, and share your recipes.">
  <%= stylesheet_link_tag "application", "data-turbolinks-track" => true %>
  <style>
  .hero {
    background: url(<%= asset_path 'home/background.jpg' %>) no-repeat;
    background-position: 45% 55%;
    background-size: cover;
    box-shadow: inset 0 -5rem 6rem rgba(0, 0, 0, 0.4);
    padding: 10em 0;
  }
  .hero h1 {
    color: #fff !important;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.4);
  }
  </style>
  <link rel="stylesheet" href="http://brick.a.ssl.fastly.net/Lato:400,700">
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  <meta property="og:site_name" content="Noodles">
  <meta property="og:title" content="Noodles">
  <meta property="og:url" content="http://www.getnoodl.es/">
  <meta property="og:image" content="<%= image_path('apple-touch-icon.png') %>">
  <meta property="og:description" content="Cook better with Noodles, a simple app for all your recipes.">
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@noodlesapp">
  <meta name="twitter:title" content="Noodles">
  <meta name="twitter:description" content="Cook better with Noodles, a simple app for all your recipes.">
  <meta name="twitter:image:src" content="<%= image_path('apple-touch-icon.png') %>">
  <meta name="twitter:domain" content="www.getnoodl.es">
  <script>
  !function(g,s,q,r,d){r=g[r]=g[r]||function(){(r.q=r.q||[]).push(arguments)};
