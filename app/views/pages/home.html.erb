      <a href="http://noodles.withdraft.com/pages/558280" class="px1 link-reset">Privacy</a>
      <%= link_to "Blog", announcements_path, class: "px2 link-reset" %>
      <a href="https://twitter.com/noodlesapp" class="px1 link-reset">Twitter</a>
      <a href="https://www.facebook.com/pages/Noodles/698221030285633" class="px1 link-reset">Facebook</a>
