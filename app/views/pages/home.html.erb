  <body class="center m0 bg-grey-6">
    <nav role="navigation" class="md-flex bg-white p2 print-hide">
      <div>
        <%= link_to t("general.home"), root_url, class: "px1 orange regular active" %>
        <%= link_to t("general.features"), "http://noodles.withdraft.com/", class: "px1 orange regular" %>
        <%= link_to t("general.about"), help_path, class: "px1 orange regular" %>
      </div>

      <div class="flex-auto">
        <% unless flash.empty? %>
        <% flash.each do |key, value| %>
        <p class="mb0 center <%= flash_color_class(key) %>"><%= value unless value.blank? %></p>
        <% end %>
        <% end %>
      </div>

      <div>
        <% if user_signed_in? %>
          <%= link_to t("general.sign_out"), sign_out_path, method: :delete, class: "px1 orange regular" %>
          <%= link_to t("general.your_recipes") + " >>", recipes_path, class: "px1 orange" %>
        <% else %>
          <%= link_to t("general.sign_in"), sign_in_path, class: "px1 orange regular" %>
        <% end %>
      </div>
