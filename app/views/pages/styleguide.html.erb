<main class="document mvl mw7">
  <%= react_component 'SuperHeading', children: 'Styleguide' %>
  <h2>Header 2</h2>
  <h3>Header 3</h3>
  <h4>Header 4</h4>

  <p>This is a standard paragraph in sans-serif.</p>
  <p class="content">This is a standard paragraph in serif.</p>

  <%= section_header 'Colors', 2 %>

  <section class="mbm flex fac flex-row mx-auto">
    <div class="pal bg-orange rounded mrs"></div>
    <div class="pal bg-blue rounded mrs"></div>
    <div class="pal bg-green rounded mrs"></div>
    <div class="pal bg-purple rounded mrs"></div>
    <div class="pal bg-red rounded mrs"></div>
    <div class="pal bg-grey-1 rounded mrs"></div>
    <div class="pal bg-grey-2 rounded mrs"></div>
    <div class="pal bg-grey-3 rounded mrs"></div>
    <div class="pal bg-grey-4 rounded mrs"></div>
    <div class="pal bg-grey-5 rounded border mrs"></div>
  </section>

  <%= section_header 'Buttons', 2 %>

  <p class="mbl"><a class="btn btn--primary bg-orange">Primary</a></p>

  <div style="column-width: 5rem;">
    <a class="btn bg-orange">Orange</a>
    <a class="btn bg-blue">Blue</a>
    <a class="btn bg-green">Green</a>
    <a class="btn bg-purple">Purple</a>
    <a class="btn bg-grey-3">Grey 3</a>
  </div>

  <%= section_header 'Icons', 2 %>
  <p class="grey-3 mbm">
    Iconset sourced from <a href="https://spectrum.chat" class="purple">Spectrum</a>
  </p>

  <%= react_component 'AllIcons', {}, class: 'grey-2' %>
</main>
