<%= render 'shared/nav' %>

<div class="container col-8 print-full-width recipe-print">

  <%= header_cleaner(@recipe.title, class: 'ib') %>
  <p class="text-muted m0">Published by <%= User.find(@recipe.user_id).first_name %></p>
  <p><%= cleaner(@recipe.description) %></p>

  <% if current_user && current_user.id == @recipe.user_id %>
    <div class="panel">
      <h2 class="text-success m0">Great, your recipe is now public!</h2>
      <span class="text">Send someone this link:</span>
      <a href="http://app.getnoodl.es/s/<%= @recipe.id %>" class="text-blue text-decoration">http://app.getnoodl.es/s/<%= @recipe.id %></a>
    </div>
  <% end %>

  <% if @recipe.img.url != '/imgs/original/missing.png' %>
    <div class="img-container">
      <%= image_tag @recipe.img.url %>
    </div>
  <% end %>

  <h2>Ingredients</h1>
  <%= list_cleaner(@recipe.ingredients, class: 'text') %>

  <h2>Instructions</h2>
  <div class="text">
    <%= @recipe.instructions_rendered.html_safe %>
  </div>

  <div class="action-list">

    <% unless current_user && @recipe.user_id == current_user.id %>
      <%= link_to :save_to_noodles do %>
        <%= inline_svg('ios7-download-outline.svg') %>
        <span>Save</span>
      <% end %>
    <% end %>

    <a onclick="window.print();">
      <%= inline_svg('ios7-printer-outline.svg') %>
      <span><%= t('general.print') %></span>
    </a>

  </div>

  <div class="row">
    <%= render 'shared/printer' %>
  </div>

</div>
