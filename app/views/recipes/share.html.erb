<link rel="stylesheet" href="//brick.a.ssl.fastly.net/Source+Serif+Pro:400">

<%= render 'shared/nav' %>

<article class="col-8 recipe-print">

  <h1><%= @recipe.title %></h1>
  <p class="text-muted m0">Published by <%= User.find(@recipe.user_id).first_name %></p>
  <%= simple_format(@recipe.description, class: 'm1-top') %>

  <% if current_user && current_user.id == @recipe.user_id %>
    <div class="panel social-panel">
      <%= link_to 'View private recipe', :recipe, class: 'btn btn-sm btn-default float-right m0' %>
      <h2 class="text-success">Great, your recipe is public!</h2>
      <%= render 'shared/social' %>
    </div>
  <% end %>

  <% unless @recipe.img.url == '' %>
    <%= image_tag @recipe.img %>
  <% end %>

  <h2 class="m1-top">Ingredients</h1>
  <%= simple_format(@recipe.ingredients, class: 'text') %>

  <h2 class="m1-top">Instructions</h2>
  <div class="text">
    <%= sanitize @recipe.instructions_rendered %>
  </div>

  <p id="recipe-details-btn" class="text-primary block m1-top">
    <%= inline_svg('ios7-information-outline.svg') %>
    Show Details
  </p>

  <div class="hide" id="recipe-details-container">
    <h2 class="m1-top">Details</h2>
    <p class="text-muted">Source: <%= @recipe.source %>
    <p class="text-muted">Serves: <%= @recipe.serves %>

    <h2 class="m1-top">Notes</h2>
    <% if @recipe.notes.length == 0 %>
      <p class="text-muted">This recipe has no notes.</p>
    <% else %>
      <div class="panel notes">
        <%= @recipe.notes %>
      </div>
    <% end %>
  </div>

  <% unless current_user && @recipe.user_id == current_user.id %>
    <div class="panel social-panel">
      <h2 class="m0">If you like this this recipe, share it.</h2>
      <%= render 'shared/social' %>
    </div>
  <% end %>

  <div class="action-list">

    <% unless current_user && @recipe.user_id == current_user.id %>
      <%= link_to :save_to_noodles do %>
        <%= inline_svg('ios7-download-outline.svg') %>
        <span>Save</span>
      <% end %>
    <% end %>

    <a onclick="window.print();">
      <%= inline_svg('ios7-printer-outline.svg') %>
      <span><%= t('general.print') %></span>
    </a>

  </div>

  <%= render 'shared/printer' %>

</article>
