<% if params[:search] %>
<%- title "Search" %>
<% else %>
<%- title "Recipes" %>
<% end %>
<% activate_nav!(:recipes) %>

<%= render "shared/nav" %>

<article class="sm-col-11 md-col-7 mx-auto">
  <%= react_component("RecipeList", show_header: true, show_random: true, createFromSearch: true) %>
</article>

<%= render "import" %>

<a class="btn-paper-mini bg-orange fill-white circle fixed p1 shadow" name="importModal" href="#importModal" data-behavior="modal_trigger">
  <%= inline_svg("import.svg") %>
</a>

<%= link_to new_recipe_path, class: "btn-paper bg-orange fill-white circle fixed p2 shadow" do %>
  <%= inline_svg("add.svg") %>
<% end %>
