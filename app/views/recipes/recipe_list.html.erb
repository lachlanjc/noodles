<% if params[:search] %>
<%- title "Search" %>
<% else %>
<%- title "Recipes" %>
<% end %>
<% activate_nav!(:recipes) %>

<%= render "shared/nav" %>

<article class="sm-col-11 md-col-7 mx-auto">
  <%= react_component("RecipeList", recipes_path: "/recipes.json", show_header: true, show_random: true) %>
</article>

<%= render "import" %>

<a class="btn-paper-mini bg-orange fill-white circle fixed p1 shadow js-modal-trigger" name="importModal" href="#importModal" aria-label="Import from the web">
  <%= inline_svg("import.svg") %>
</a>

<%= link_to new_recipe_path, class: "btn-paper bg-orange fill-white circle fixed p2 shadow", aria_label: "Add a new recipe" do %>
  <%= inline_svg("add.svg") %>
<% end %>
