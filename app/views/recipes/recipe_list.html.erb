<%- title 'Recipes' %>
<% activate_nav!(:recipes) %>

<%= render 'shared/nav' %>

<article class="col-7 recipe-list-container">

  <h1>
    <%= t('general.recipes') %>
    <%= link_to :random_recipe, class: 'header-indicator random', title: 'Open a random recipe from your Noodles' do %>
      <%= inline_svg('random.svg') %>
    <% end %>
  </h1>

  <% if @recipes_count < 6 %>
  <p class="print-hide panel">
    You only have <%= pluralize(@recipes_count, 'recipe') %> in Noodles right now...<%= link_to 'add more', :new_recipe %> and you'll get a lot more value out of it.
  </p>
  <% elsif @recipes_count > 8 && @favorites_count == 0 %>
  <p class="print-hide panel">
    Favorites are a great way to quickly access your best recipes. To mark a Favorite, click the heart under Details while you edit a recipe.
    <br>
    Or <a href="http://noodles.withdraft.com/#favorites">learn more about Favorites</a>.
  </p>
  <% end %>

  <div class="recipe-list">
    <%= render partial: 'recipe', collection: @recipes, cache: true %>
  </div>

  <p class="printer-copy"><%= t('recipes.printing.print_copy') %></p>

</article>

<div id="importModal" role="dialog" class="modal">
  <h2>Import a Recipe</h2>
  <hr>
  <p>Paste the URL of a recipe</p>
  <input type="text" class="text-input" placeholder="www.epicurious.com/an-awesome-recipe">
  <small>Currently we support <a href="http://www.epicurious.com/">Epicurious</a>, <a href="www.bonappetit.com/">Bon Appetit</a>, <a href="http://foodandwine.com/">Food and Wine</a>, and <a href="http://allrecipes.com/">Allrecipes</a>.</small>
</div>

<a class="btn-paper-mini" id="importModalTrigger" name="importModal" href="#importModal">
  <%= inline_svg('import.svg') %>
</a>

<%= link_to :new_recipe, class: 'btn-paper' do %>
  <%= inline_svg('add.svg') %>
<% end %>
