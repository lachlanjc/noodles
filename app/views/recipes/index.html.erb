<% if current_user %>
  <% activate_nav!(:recipes) %>
<% end %>

<%= render 'shared/nav' %>

<%= render 'layouts/flash' %>

<br>

<% if current_user and @recipes.count == 0 %>

  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <div class="panel">
        <div class="panel-title">
          <%= t('.hey_welcome') %>
        </div>
        <div class="panel-body">
          <%= t('.no_recipes') %>
          <br>
          <%= link_to t('.create_first'), new_recipe_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-8 col-md-offset-2 footer">
    <%= render 'shared/footer' %>
  </div>

<% elsif current_user %>

  <div class="page container col-md-8 col-md-offset-2 recipes-list-container">

    <div class="list-group recipes-list-group">

      <% @recipes.each do |recipe| %>

        <%= link_to (recipe) do %>
          <div class="list-group-item">
            <h3><%= recipe.title %></h3>
            <% unless recipe.description.length == 0 %>
              <p><%= recipe.description %></p>
            <% end %>
          </div>
        <% end %>

      <% end %>

    </div>

  </div>

  <div class="col-md-8 col-md-offset-2 footer">
    <%= render 'shared/footer' %>
  </div>

<% else %>

  <div class="page container col-md-6 col-md-offset-3 home text-center">

    <h1><%= t('.eat_well_with') %></h1>

    <p>
      Noodles is the best place to keep all your recipes.
    </p>

    <%= link_to t('general.sign_up'), :add_user, class: 'btn btn-lg btn-primary' %>

  </div>

  <div class="col-md-6 col-md-offset-3 footer">
    <%= render 'shared/footer' %>
  </div>

<% end %>

<% if current_user %>

  <%= link_to :new_recipe, class: 'btn-paper btn-paper-right animated bounceInUp' do %>
    <span class="geomicon geomicon-plus"></span>
  <% end %>

<% end %>
