<% activate_nav!(:recipes) %>

<%= render 'shared/nav' %>

<%= render 'layouts/flash' %>

<div class="page container col-md-8 col-md-offset-2 print-full-width recipe-print">

  <div class="row">

    <% if @recipe.favorite == true %>
      <div class="pull-right">
        <span class="geomicon geomicon-star corner-star text-yellow"></span>
      </div>
    <% end %>

    <h1 class="page-title"><%= @recipe.title %></h1>
    <p><%= @recipe.description.html_safe %></p>

  </div>

  <% if @recipe.img.url != '/imgs/original/missing.png' %>
    <div class="row img-container">
      <%= image_tag @recipe.img.url %>
    </div>
  <% end %>

  <div class="row">

    <h1>Ingredients</h1>
    <div class="serif">
      <%= simple_format(@recipe.ingredients.html_safe) %>
    </div>

  </div>

  <div class="row">

    <h1>Instructions</h1>
    <div class="serif">
      <%= simple_format(@recipe.instructions.html_safe) %>
    </div>

  </div>

  <div class="row col-md-4 no-padding">

    <div class="action-list">

      <%= link_to :edit_recipe do %>
        <span class="geomicon geomicon-write"></span>
        <span><%= t('general.edit') %></span>
      <% end %>

      <a onclick="window.print();">
        <span class="geomicon geomicon-print"></span>
        <span><%= t('general.print') %></span>
      </a>

      <!-- <a>
        <span class="geomicon geomicon-action"></span>
        <span>Share</span>
      </a> -->

    </div>

  </div>

  <div class="row">
    <%= render 'shared/printer' %>
  </div>

</div>

<%= link_to :edit_recipe, class: 'btn-paper animated bounceInUp' do %>
  <span class="geomicon geomicon-write"></span>
<% end %>
