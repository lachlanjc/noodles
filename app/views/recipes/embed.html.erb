<%= stylesheet_link_tag 'embed', '//brick.a.ssl.fastly.net/Lato:400', media: 'all' %>
<%= link_to shared_url, style: 'text-decoration: none;' do %>
  <% if @recipe.imaged? %>
    <article class="noodles noodles--img" style="background-image: url(<%= @recipe.img.url %>);">
  <% else %>
    <article class="noodles noodles--basic">
  <% end %>
    <%= content_tag :h1, @recipe.title, class: 'noodles__text noodles__header' %>
    <%= content_tag(:p, @recipe.description_truncated, class: 'noodles__text noodles__description') if @recipe.description.to_s.present? %>
    <footer class="noodles__footer noodles__text">
      Published with &#10084; on Noodles
    </footer>
  </article>
<% end %>
