<%= link_to r.public_url, style: 'text-decoration: none;' do %>
  <% if r.imaged? %>
    <article class="noodles noodles--img" style="background-image:
      linear-gradient(rgba(0,0,0,.25), rgba(0,0,0,.5)),
      url(<%= r.img.url %>);
    ">
  <% else %>
    <article class="noodles noodles--basic">
  <% end %>
    <%= content_tag :h1, r.title, class: 'noodles__text noodles__header' %>
    <%= content_tag :p, r.description.truncate(72), class: 'noodles__text noodles__description' if r.description %>
    <footer class="noodles__footer noodles__text">
      Published with &#10084; on Noodles
    </footer>
  </article>
  <%= stylesheet_link_tag 'embed', media: 'all' %>
<% end %>
