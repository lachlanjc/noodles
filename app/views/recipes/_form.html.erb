<%= form_for(@recipe) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true, class: 'text-input' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'text-input' %>

  <%= f.label t('general.photo') %>
  <%= f.file_field :img %>

  <br>

  <%= f.label :ingredients %>
  <%= f.text_area :ingredients, rows: 6, class: 'text-input serif' %>

  <%= f.label :instructions %>
  <%= f.text_area :instructions, rows: 10, class: 'text-input serif' %>

  <div class="action-list">

    <a class="item-favorite">
      <label class="control">
        <%= f.check_box :favorite %>
        <div class="control-indicator">
          <%= inline_svg('ios7-star-outline.svg') %>
        </div>
        <span><%= t('general.favorite') %></span>
      </label>
    </a>

    <% if nav_active?(:edit_recipe) %>
      <%= link_to @recipe, method: :delete, data: { confirm: t('general.delete_forever') }, class: 'item-danger' do %>
        <%= inline_svg('ios7-trash-outline.svg') %>
        <span><%= t('general.delete') %></span>
      <% end %>
    <% end %>

  </div>

  <div class="row">
    <% if nav_active?(:new_recipe) %>
      <%= f.submit t('general.create_recipe'), class: 'btn btn-primary' %>
    <% else %>
      <%= f.submit t('general.save'), class: 'btn btn-primary' %>
    <% end %>
  </div>

<% end %>
