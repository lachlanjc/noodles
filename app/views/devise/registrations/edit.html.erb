<%- title 'Edit your account' %>
<% activate_nav!(:settings) %>

<%= render 'shared/nav' %>

<article class="col-6">

  <h1><%= t('.account_settings') %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <h2>Account Information</h2>

    <%= devise_error_messages! %>

    <%= f.label t('.fn') %>
    <%= f.text_field :first_name, class: 'text-input', name: 'fname', required: true %>

    <%= f.label t('.email_a') %>
    <%= f.email_field :email, class: 'text-input', name: 'email', autocomplete: 'email' %>

    <%= f.label t('.current_pass') %>
    <%= f.password_field :current_password, autocomplete: 'off', class: 'text-input' %>

    <%= f.label :password, class: 'ib' %><small> <%= t('.can_leave_blank') %></small>
    <%= f.password_field :password, autocomplete: 'off', class: 'text-input' %>

    <%= f.submit t('general.update'), class: 'btn btn-primary' %>

  <% end %>

  <hr>

  <h2 class="m1-top"><%= t('.delete_account') %></h2>
  <p><%= t('.want_account_gone') %></p>
  <p>If you just need help with something in Noodles, go to <%= link_to 'Help', :help %> (it's in the navigation at the top as well).</p>
  <%= link_to t('.delete_my_account'), registration_path(resource_name), class: 'text-danger', data: { confirm: "Are you sure you want to delete your Noodles account and recipes? If so, hit OK." }, method: :delete %>

  <%= render 'shared/printer' %>

</article>
