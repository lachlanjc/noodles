<% activate_nav!(:sign_up) %>
<%- title 'Sign Up' %>

<% @form = render 'new', user: @user, text: t('.sign_up_and') %>

<% if request.xhr? %>
  <%= @form %>
<% else %>
  <%= render 'shared/nav' %>

  <main class="document mw7 tc">
    <h1 class="mbs"><%= t('.welcome') %></h1>
    <%= @form %>
  </main>
<% end %>
