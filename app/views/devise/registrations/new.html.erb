<% activate_nav!(:sign_up) %>

<%= render 'shared/nav' %>

<div class="container col-6">

  <h1><%= t('.welcome') %></h1>
  <p><%= t('.sign_up_and') %></p>

  <%= form_for @user, url: registration_path(resource_name), html: {name: 'reg'} do |f| %>

    <%= devise_error_messages! %>

    <%= f.label t('.first_name') %>
    <%= f.text_field :first_name, class: 'text-input', id: 'name-full', autofocus: true, required: true %>

    <%= f.label t('.email_check') %>
    <%= f.email_field :email, class: 'text-input', required: true, id: 'email' %>

    <%= f.label :password %>  <i><%= t('.eight_char') %></i>
    <%= f.password_field :password, class: 'text-input', required: true, id: 'new-password', pattern: '.{8,}' %>

    <%= f.submit t('general.sign_up'), class: 'btn btn-primary' %>

  <% end %>

</div>
