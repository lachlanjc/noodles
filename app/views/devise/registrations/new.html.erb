<% activate_nav!(:sign_up) %>

<%= render 'shared/nav' %>

<%= render 'layouts/flash' %>

<div class="page container col-md-6 col-md-offset-3">

  <div class="row">

    <h1 class="page-title"><%= t('.welcome') %></h1>
    <p><%= t('.sign_up_and') %></p>

  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="row">

      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, autocomplete: :off %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', required: true, autocomplete: :off %>

      <%= f.label :password %>  <i><%= t('.eight_char') %></i>
      <%= f.password_field :password, class: 'form-control', required: true, pattern: '.{8,}', title: 'Make sure you use at least 8 characters' %>

    </div>

    <div class="row">

      <%= f.submit t('general.sign_up'), class: 'btn btn-primary' %>

    </div>

  <% end %>

</div>

<div class="container col-md-6 col-md-offset-3 footer">
  <%= render 'shared/footer' %>
</div>
