<% activate_nav!(:sign_up) %>
<%- title 'Sign Up' %>
<% content_for(:bg_img) { image_path "auth/#{rand(1..4).to_s}.jpg" } %>

<% @form = render 'new', user: @user, text: t('.sign_up_and') %>

<% if request.xhr? %>
  <%= @form %>
<% else %>
  <%= render 'shared/nav' %>

  <main class="document bw0 mw6">
    <%= section_header 'Hey, welcome to Noodles!', 1, class: 'mtn mbs f2' %>
    <%= @form %>
  </main>
<% end %>
