<%= render 'shared/nav' %>

<%= render 'layouts/flash' %>

<br>

<div class="container page col-md-6 col-md-offset-3">

  <div class="row">
    <h1 class="page-title"><%= t('.sign_in_to_n') %></h1>
    <p><%= t('.enter_info') %></p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: true, autofocus: true %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', required: true, pattern: '.{8,}', title: 'Make sure you use at least 8 characters' %>
    </div>

    <% if devise_mapping.rememberable? -%>

      <div class="row">
        <div class="remember-me">
          <%= f.check_box :remember_me, class: 'form-control' %> <%= f.label :remember_me, class: 'control-label' %>
        </div>
      </div>

    <% end %>

    <div class="row">
      <%= f.submit t('.sign_in'), class: 'btn btn-primary' %>
    </div>

  <% end %>

</div>

<div class="col-md-6 col-md-offset-3 footer">
  <%= render 'shared/footer' %>
</div>
