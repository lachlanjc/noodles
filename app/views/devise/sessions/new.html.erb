<% activate_nav!(:sign_in) %>
<%- title 'Sign in' %>
<% content_for(:bg_img) { image_path "auth/#{rand(1..4).to_s}.jpg" } %>

<%= render 'shared/nav' %>

<main class="document document--bg mw6 tc">
  <h1 class="mbs"><%= t '.sign_in_to_n' %></h1>
  <p class="mbm"><%= t '.enter_info' %></p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'text-input mx-auto', required: true, autofocus: true %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'text-input mx-auto', required: true, pattern: ".{8,}", title: "Make sure you use at least 8 characters" %>

    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'mtm' %>
    </div>

    <%= f.submit t('.sign_in'), class: 'btn bg-orange mtm' %>

    <%= link_to 'Forgot your password?', :forgot_password, class: 'mtm db f5 grey-2' %>

  <% end %>
</main>
