<div class="flex mtm">
  <div class="tc phm border rounded dib mx-auto dn-p">
    <h2>This recipe is public.</h2>

    <p class="mbs">Share the link:</p>
    <section class="f5">
      <input value="<%= @shared_url %>" class="text-input dib" readonly>
      <button type="button" class="btn bg-green btn-sm mls"
              data-clipboard-text="<%= @shared_url %>" data-behavior="copy">
        Copy
      </button>
    </section>

    <div class="social pvs mts">
      <a rel="nofollow" href="http://twitter.com/share?text=Check out <%= @recipe.title %>, published on @noodlesapp:&amp;url=<%= @shared_url %>" class="mrs" target="_blank">
        <%= twitter_icon %>
      </a>
      <a rel="nofollow" href="https://www.facebook.com/sharer/sharer.php?u=<%= @shared_url %>" class="mrs" target="_blank">
        <%= facebook_icon %>
      </a>
      <% if @recipe.img.url.blank? %>
        <% @media_url = image_url('apple-touch-icon.png').to_s %>
      <% else %>
        <% @media_url = @recipe.img.url.to_s %>
      <% end %>
      <a rel="nofollow" href="http://www.pinterest.com/pin/create/button/?url=http%3A%2F%2Fwww.getnoodl.es%2Fs%2F<%= @recipe.shared_id %><%= '&media=' + @media_url %>&description=<%= @recipe.title %> <%= '(' + @recipe.description + ')' %> on Noodles" class="mrs" target="_blank">
        <%= pinterest_icon %>
      </a>
      <a rel="nofollow" href="https://buffer.com/add?url=http%3A%2F%2Fwww.getnoodl.es%2Fs%2F<%= @recipe.shared_id %>&text=Check out <%= @recipe.title %>, published on Noodles:" class="mrs" target="_blank">
        <%= buffer_icon %>
      </a>
      <a rel="nofollow" href="https://plus.google.com/share?url=http%3A%2F%2Fwww.getnoodl.es%2Fs%2F<%= @recipe.shared_id %>" class="mrs" target="_blank">
        <%= googleplus_icon %>
      </a>
      <% if me_owns_recipe? %>
        <a href="mailto:?subject=Check out <%= @recipe.title %> on Noodles&body=I published a new recipe on Noodles (https://getnoodl.es), <%= @recipe.title %>. Check it out: <%= @shared_url %>">
      <% else %>
        <a href="mailto:?subject=Check out <%= @recipe.title %> on Noodles&body=Here's a recipe called <%= @recipe.title %> on Noodles (https://getnoodl.es): <%= @shared_url %>">
      <% end %>
        <%= email_icon %>
      </a>
    </div>

    <% if !nav_active?(:shared_recipe) %>
      <p class="mts"><%= link_to 'See the public recipe »', @shared_url, class: 'btn btn-sm bg-blue' %></p>
      <p class="grey-3 f5">Or you could <%= link_to 'un-share this recipe', recipe_un_share_path(@recipe), class: 'link-reset border-bottom' %>.</p>
    <% elsif nav_active?(:shared_recipe) && me_owns_recipe? %>
      <p class="mbm"><%= link_to '« Back to private recipe', recipe_path(@recipe), class: 'btn btn-sm bg-blue' %></p>
    <% end %>
  </div>
</div>
