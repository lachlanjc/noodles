<div class="flex mt2">
  <div class="center py1 px2 border rounded inline-block mx-auto print-hide">
    <h2 class="mt1">This recipe is public.</h2>

    <p class="mb1">Share this link:</p>
    <%= react_component("CopyLink", url: @shared_url) %>

    <div class="social py1">
      <a rel="nofollow" href="http://twitter.com/share?text=Check out <%= @recipe.title %>, published on @noodlesapp:&amp;url=<%= @shared_url %>" class="mr1 social-twitter" target="_blank">
        <%= inline_svg("social-twitter.svg") %>
      </a>
      <a rel="nofollow" href="https://www.facebook.com/sharer/sharer.php?u=<%= @shared_url %>" class="mr1 social-facebook" target="_blank">
        <%= inline_svg("social-facebook.svg") %>
      </a>
      <% if @recipe.img.url.blank? %>
        <% @media_url = image_url('apple-touch-icon.png').to_s %>
      <% else %>
        <% @media_url = @recipe.img.url.to_s %>
      <% end %>
      <a rel="nofollow" href="http://www.pinterest.com/pin/create/button/?url=http%3A%2F%2Fwww.getnoodl.es%2Fs%2F<%= @recipe.shared_id %><%= '&media=' + @media_url %>&description=<%= @recipe.title %> <%= '(' + @recipe.description + ')' %> on Noodles" class="mr1 social-pinterest" target="_blank">
        <%= inline_svg("social-pinterest.svg") %>
      </a>
      <a rel="nofollow" href="https://bufferapp.com/add?url=http%3A%2F%2Fwww.getnoodl.es%2Fs%2F<%= @recipe.shared_id %>&text=Check out <%= @recipe.title %>, published on Noodles:" class="mr1 social-buffer" target="_blank">
        <%= inline_svg("social-buffer.svg") %>
      </a>
      <a rel="nofollow" href="https://plus.google.com/share?url=http%3A%2F%2Fwww.getnoodl.es%2Fs%2F<%= @recipe.shared_id %>" class="mr1 social-plus" target="_blank">
        <%= inline_svg("social-googleplus.svg") %>
      </a>
      <% if me_owns_recipe? %>
        <a href="mailto:?subject=Check out <%= @recipe.title %> on Noodles&body=I published a new recipe on Noodles (http://www.getnoodl.es), <%= @recipe.title %>. Check it out: <%= @shared_url %>" class="social-email">
      <% else %>
        <a href="mailto:?subject=Check out <%= @recipe.title %> on Noodles&body=Here's a recipe called <%= @recipe.title %> on Noodles (http://www.getnoodl.es): <%= @shared_url %>" class="social-email">
      <% end %>
        <%= inline_svg("mail.svg") %>
      </a>
    </div>

    <% if nav_active?(:recipe) %>
    <p class="mt1"><%= link_to "Check it out.", @shared_url, class: "btn-blue" %></p>
    <% end %>

    <% if me_owns_recipe? %>
    <p class="grey-3 h5">Or you could <%= link_to "un-share this recipe", recipe_un_share_path(@recipe), class: "link-reset border-bottom" %>.</p>
    <% end %>
  </div>
</div>
