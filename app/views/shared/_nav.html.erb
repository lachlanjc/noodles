<% if current_user %>

  <nav class="navbar navbar-noodles" role="navigation">

    <div class="pull-left">
      <a class="nav-brand-text" href="/"><%= t('general.noodles') %></a>
    </div>

    <div class="container col-md-8">

      <div class="nav-link <%= nav_active_class(:recipes) %>">
        <%= link_to :recipes do %>
          <span class="geomicon geomicon-rows"></span>
          <span class="title"><%= t('general.recipes') %></span>
        <% end %>
      </div>

      <div class="nav-link <%= nav_active_class(:recipes) %>">
        <%= link_to :recipes do %>
          <span class="geomicon geomicon-grid"></span>
          <span class="title"><%= t('general.collections') %></span>
        <% end %>
      </div>

    </div>

    <div class="pull-right">

      <a href="#" class="dropdown-toggle" data-toggle="dropdown">

        <%= image_tag current_user.gravatar_url(:rating => 'PG', :secure => true, :size => 60, :default => 'identicon'), class: 'avatar' %>
        <span class="caret"></span></a>

        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to t('general.settings'), :edit_user_registration %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to t('general.sign_out'), :destroy_user_session %>
          </li>
        </ul>

      </a>

    </div>

  </nav>

<% else %>

  <nav class="navbar navbar-noodles nav-logged-out" role="navigation">

    <div class="pull-left">

      <a class="nav-brand-text" href="/">
        <%= t('general.noodles') %>
      </a>

    </div>

    <div class="pull-right">

      <% if nav_active?(:sign_up) or nav_active?(:home) %>

        <div class="nav-link">
          <%= link_to t('general.sign_in'), :create_user_session %>
        </div>

      <% elsif nav_active?(:sign_in) %>

        <div class="nav-link">
          <%= link_to t('general.sign_up'), :add_user %>
        </div>

      <% else %>

        <div class="nav-link">
          <%= link_to t('general.sign_up'), :add_user %>
        </div>

      <% end %>

    </div>

  </nav>

<% end %>
