<% if current_user %>

  <nav class="navbar navbar-noodles" role="navigation">

    <div class="pull-left">
      <%= link_to 'N', root_url, class: 'nav-brand-text' %>
    </div>

    <div class="container col-md-8">

      <div class="nav-link <%= nav_active_class(:recipes) %>">
        <%= link_to :recipes do %>
          <span class="geomicon geomicon-rows"></span>
          <span class="title"><%= t('general.recipes') %></span>
          <%# if nav_active?(:recipes) %>
            <%# if @recipe_count > 0 %>
              <!-- <span class="badge"><%= @recipe_count %></span> -->
            <%# end %>
          <%# end %>
        <% end %>
      </div>

    <% if nav_active?(:recipes) %>

       <div class="nav-link">
        <%= link_to :favorites do %>
          <span class="geomicon geomicon-star"></span>
          <span class="title"><%= t('general.favorites') %></span>
        <% end %>
      </div>

      <div class="nav-link">
        <%= link_to :recipes do %>
          <span class="geomicon geomicon-action"></span>
          <span class="title"><%= t('general.shared') %></span>
        <% end %>
      </div>
    <% end %>

     <div class="nav-link">
        <%= link_to :recipes do %>
          <span class="geomicon geomicon-tags"></span>
          <span class="title"><%= t('general.tags') %></span>
        <% end %>
      </div>

    </div>

    <div class="pull-right nav-link">

      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span><%= current_user.first_name %></span>
        <span class="caret"></span>
      </a>

      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to t('general.settings'), :edit_user_registration %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to t('general.sign_out'), :destroy_user_session %>
        </li>
      </ul>

    </div>

  </nav>

<% else %>

  <nav class="navbar navbar-noodles nav-logged-out" role="navigation">

    <div class="pull-left">
      <%= link_to 'N', root_url, class: 'nav-brand-text' %>
    </div>

    <div class="pull-right">

      <% if nav_active?(:sign_up) or nav_active?(:home) %>

        <div class="nav-link">
          <%= link_to t('general.sign_in'), :create_user_session %>
        </div>

      <% elsif nav_active?(:sign_in) %>

        <div class="nav-link">
          <%= link_to t('general.sign_up'), :add_user %>
        </div>

      <% else %>

        <div class="nav-link">
          <%= link_to t('general.sign_up'), :add_user %>
        </div>

      <% end %>

    </div>

  </nav>

<% end %>
